@{
    ViewData["Title"] = "Register";
}

<style>
    .registerPage {
        height: 100%;
        width: 100%;
        display: flex;
        justify-content: center;
    }

    .registerFormContainer {
        margin-top: 10vh;
        width: 478px;
    }

    .registerForm {
        text-align: left;
        border: 3px solid green;
        border-radius: 16px;
        padding: 48px;
        position: relative;
        top: 0;
        left: 0;
    }

    .inputTextWrapper {
    }

    .inputText {
        width: 100%;
        height: 5vh;
    }

    .inputButtonWrapper {
        margin-top: 5vh;
    }

    .inputButton {
        width: 100%;
        height: 5vh;
        background-color: green;
        color: white;
    }

    .formTitle {
        padding: 5%;
        text-align: center;
    }
</style>


<div class="registerPage">
    <div class="registerFormContainer">
        <div class="registerForm">
            <div class="formTitle">
                <h2>Sign Up</h2>
            </div>
            <form>
                <div class="inputTextWrapper">
                    <label for="customerName">Name</label>
                    <br />
                    <input type="text" id="customerName" class="inputText" />
                </div>
                <br />
                <div class="inputTextWrapper">
                    <label for="password">Password</label>
                    <br />
                    <input type="password" id="password" class="inputText" />
                </div>
                <br />
                <div class="inputTextWrapper">
                    <label for="customerDOB">Birthday</label>
                    <br />
                    <input type="date" id="customerDOB" class="inputText" />
                </div>
                <br />
                <div class="inputTextWrapper">
                    <label for="customerGender">Gender</label>
                    <br />
                    <select name="customerGender" id="customerGender">
                        <option value="male">Male</option>
                        <option value="female">Female</option>
                        <option value="other">Other</option>
                    </select>
                </div>
                <br />
                <div class="inputButtonWrapper">
                    <button class="inputButton">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>