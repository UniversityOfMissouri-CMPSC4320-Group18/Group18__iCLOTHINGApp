@{
    ViewData["Title"] = "Login";
}

<style>
    .loginPage {
        height: 100%;
        width: 100%;
        display: flex;
        justify-content: center;
    }

    .loginFormContainer {
        margin-top: 10vh;
        width: 478px;
    }

    .loginForm {
        text-align: left;
        border: 3px solid green;
        border-radius: 16px;
        padding: 48px;
        position: relative;
        top: 0;
        left: 0;
    }

    .inputTextWrapper {
    }

    .inputText {
        width: 100%;
        height: 5vh;
    }

    .inputButtonWrapper {
        margin-top: 5vh;
    }

    .inputButton {
        width: 100%;
        height: 5vh;
        background-color: green;
        color: white;
    }

    .formTitle {
        padding: 5%;
        text-align: center;
    }
</style>

<div class="loginPage">
    <div class="loginFormContainer">
        <div class="loginForm">
            <div class="formTitle">
                <h2>Login</h2>
            </div>
            <form>
                <div class="inputTextWrapper">
                    <label for="customerName">Name</label>
                    <br />
                    <input type="text" id="customerName" class="inputText" />
                </div>
                <br />
                <div class="inputTextWrapper">
                    <label for="password">Password</label>
                    <br />
                    <input type="password" id="password" class="inputText" />
                </div>
                <br />
                <div class="inputButtonWrapper">
                    <button class="inputButton">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>